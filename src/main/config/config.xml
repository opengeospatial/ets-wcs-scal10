<?xml version="1.0" encoding="UTF-8"?>
<!-- Add this entry to TE_BASE/config.xml (//organization/standard) -->
<organization>
  <name>OGC</name>
  <standard>
    <name>Web Coverage Service (WCS) Scaling Extension</name>
    <version>
      <name>1.0</name>
      <suite>
        <namespace-uri>http://www.opengis.net/wcs/2.0</namespace-uri>
        <prefix>wcs-scal</prefix>
        <local-name>suite</local-name>
        <title>WCS 2.0 Scaling Extension Conformance Test Suite</title>
        <description>Checks WCS Scaling Extension implementations for conformance with OGC 12-039.</description>
      </suite>
      <revision>
        <name>${project.version}</name>
        <sources>
          <source>wcs/${spec-version}/ctl</source>
        </sources>
        <resources>wcs/${spec-version}/resources</resources>
        <webdir>wcs/${spec-version}/site</webdir>
      </revision>
    </version>
  </standard>
</organization>
